<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:rUIAvaloniaDesktopTester.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="400"
             x:Class="rUIAvaloniaDesktopTester.Views.GenerateKeysPageView"
             x:DataType="vm:GenerateKeysPageViewModel">

    <Design.DataContext>
        <vm:GenerateKeysPageViewModel />
    </Design.DataContext>

    <StackPanel Margin="24">
        <TextBlock Text="Generate Keys"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16" />
        <TextBlock Text="Select a key type and parameters to generate cryptographic keys."
                   Foreground="{DynamicResource rUIForegroundSecondaryBrush}" />
    </StackPanel>
</UserControl>
